@using Fao.Front_End.Components.Partials
@inject NavigationManager NavigationManager
@if (IsLoaded == false)
{

    <div class="card">
        <div class="card-body">
            <div class="placeholder-glow d-flex align-items-center gap-3">
                <div class="spinner-grow text-secondary" role="status">
                </div>
                <span class="text-secondary">Chargement...</span>
            </div>
        </div>
    </div>

}
else if (MealName != null && MealType != null)
{
    <div class="d-flex gap-4 justify-content-between align-items-center">
        <div class="w-100 meal-card" @onclick="ShowRecipeDetails">

            <h4>@MealName</h4>
            <h6>@MealType</h6>

        </div>
        <div class="class">
            <button class="btn btn-outline-danger d-flex align-items-center gap-2"
                @onclick="() => DeleteMeal(MealDate, MealTypeFilter.ToString())">
                <i class="bi bi-trash fs-2"></i>
                <span class="d-md-block d-none">
                    Supprimer le repas
                </span>
            </button>
        </div>
    </div>

}
else
{
    <button class="btn btn-outline-success d-flex align-items-center gap-2" @onclick="NavigateToMealSelector">
        <i class="bi bi-plus-square fs-2"></i>
        <span>
            Ajouter un repas
        </span>
    </button>
}